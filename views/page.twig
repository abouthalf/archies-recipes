{% extends 'layout.twig' %}

{% block title %}{{ page.head.title }}{% endblock %}

{%  block meta %}
	{%  for m in meta %}
	<meta name="{{ m.name }}" content="{{ m.content }}">
	{%  endfor %}
{%  endblock %}



{% block content %}
	<nav class="breadcrumb">
		<ul>
			<li><a href="/">Home</a></li>
			{% if current != 'index.html' %}
			<li><a href="{{ permalink }}">{{ page.head.title }}</a></li>
			{% endif %}
		</ul>
	</nav>
	{% if image %}
		<aside>
			<a href="images/{{ image }}">
				<img src="images/{{ image }}" alt="{{ page.head.title }}">
			</a>
		</aside>
	{% endif %}
	<article>
		{{ page.body.asXML()|replace({'<body>':'','</body>':''})|raw }}
	</article>
	<nav>
		{% if next or prev %}
		<ul>
			{% if prev %}
			<li>
				<a href="{{ prev }}">Previous</a>
			</li>
			{% endif %}
			{% if next %}
				<li>
					<a href="{{ next }}">Next</a>
				</li>
			{% endif %}
		</ul>
		{% endif %}
	</nav>
{% endblock %}